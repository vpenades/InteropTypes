<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <TargetFrameworks>netstandard2.0;netstandard2.1;net5.0;net6.0</TargetFrameworks>
    <RootNamespace>InteropTypes.Graphics.Drawing</RootNamespace>
    <AllowUnsafeBlocks>true</AllowUnsafeBlocks>    
  </PropertyGroup>
  
  <Import Project="..\Package.props" />
  <Import Project="..\Version.props" />  
  <Import Project="..\Analysers.props" />
  <Import Project="..\ApiChangeAnalyzer.props" />

  <PropertyGroup>
    <Description>
      Basic interfaces for generic drawing.
      - 2D: ICanvas2D
      - 3D: IScene3D      
    </Description>
  </PropertyGroup>  

  <ItemGroup Condition=" '$(TargetFramework)' == 'netstandard2.0' ">    
    <PackageReference Include="System.Numerics.Vectors" Version="4.5.0" />
    <PackageReference Include="System.Memory" Version="4.5.4" />
  </ItemGroup>  

  <ItemGroup>    
    <InternalsVisibleTo Include="InteropTypes.Graphics.Drawing.Tests" />
  </ItemGroup>  

</Project>
