  <ItemGroup>
    <Content CopyToOutputDirectory="PreserveNewest" Include="ffmpeg5/win-x64/*" Pack="true" />
  </ItemGroup>

  <ItemGroup>        
    <PackageReference Include="FFmpeg.AutoGen" Version="5.0.0" />    
  </ItemGroup>    

</Project>
